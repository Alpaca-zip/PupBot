<?xml version="1.0"?>
<launch>
  <arg name="model" default="$(find quadruped_robot)/urdf/quadruped_robot.xacro"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>   
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="gui" value="true"/>
  </include>
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model quadruped_robot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos)" />
  <rosparam file="$(find quadruped_robot)/controllers.yaml" command="load"/>
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
        args="joint_state_controller leftfront_leg_controller leftback_leg_controller rightfront_leg_controller rightback_leg_controller"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
</launch>