<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find pupbot)/urdf/pupbot.xacro"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="imu_topic" default="imu"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>
  <!-- spawn_urdf node -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model pupbot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos)
  -J leftfront_leg_shoulder_joint -0.5 -J leftback_leg_shoulder_joint -0.5 -J leftfront_leg_upper_joint 1.5 -J leftback_leg_upper_joint 1.5
  -J leftfront_leg_lower_joint 2.5 -J leftback_leg_lower_joint 2.5 -J rightfront_leg_shoulder_joint 0.5 -J rightback_leg_shoulder_joint 0.5
  -J rightfront_leg_upper_joint -1.5 -J rightback_leg_upper_joint -1.5 -J rightfront_leg_lower_joint -2.5 -J rightback_leg_lower_joint -2.5"/>
  <rosparam file="$(find pupbot)/controllers.yaml" command="load"/>
  <!-- controller_spawner node -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" 
  args="joint_state_controller leftfront_leg_controller leftback_leg_controller rightfront_leg_controller rightback_leg_controller"/>
  <!-- trot_gait node -->
  <node name="trot_gait" pkg="pupbot" type="trot_gait"/>
  <!-- standing_motion node -->
  <node name="standing_motion" pkg="pupbot" type="standing_motion"/>
  <!-- inverse_kinematics node -->
  <node name="inverse_kinematics" pkg="pupbot" type="inverse_kinematics"/>
  <!-- posture_stabilization node -->
  <node name="posture_stabilization" pkg="pupbot" type="posture_stabilization">
    <param name="imu_topic" value="$(arg imu_topic)"/>
    <param name="x_offset" value="61"/>
    <param name="y_offset" value="94"/>
    <param name="lf_leg_z_offset" value="120"/>
    <param name="lr_leg_z_offset" value="120"/>
    <param name="rr_leg_z_offset" value="120"/>
    <param name="rf_leg_z_offset" value="120"/>
    <param name="width" value="120"/>
    <param name="p_gain" value="120"/>
    <param name="i_gain" value="120"/>
    <param name="D_gain" value="120"/>
  </node>
  <!-- key_control node -->
  <node name="key_control" pkg="pupbot" type="key_control" output="screen"/>
  <!-- robot_state_publisher node -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <!-- rviz node -->
  <node name="pupbot_rviz" pkg="rviz" type="rviz" args="-d $(find pupbot)/rviz/pupbot.rviz" required="true"/>
</launch>
